<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg4"
    tools:context=".KecualikanActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btback1"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/btback"
                android:onClick="btback" />

            <ImageView
                android:id="@+id/imagelogo"
                android:layout_width="178dp"
                android:layout_height="92dp"
                android:layout_alignBottom="@id/btback1"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="-110dp"
                app:srcCompat="@drawable/kecuali" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="140dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/caridosen2"
                    android:layout_width="305dp"
                    android:layout_height="35dp"
                    android:layout_centerHorizontal="true"
                    android:height="15dp"
                    android:background="@drawable/searchbox"
                    android:hint="Ketik nama mahasiswa disini..."
                    android:paddingLeft="15dp"/>

            </LinearLayout>

            <ListView
                android:id="@+id/listmhs"
                android:layout_width="300dp"
                android:layout_height="290dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/kotak"
                />

            <Button
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@android:color/holo_red_dark"
                android:text="kecualikan dari ....."
                android:textColor="#EEEEEE"
                android:textSize="11sp"
                android:textStyle="bold"
                android:id="@+id/btn_kecuali"
                />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>